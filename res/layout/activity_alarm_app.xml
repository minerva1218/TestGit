<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picd"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AlarmApp" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:textColor="#990000"
        android:text="@string/title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TimePicker
        android:id="@+id/timePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_back"
        android:layout_alignTop="@+id/btn_back"
        android:layout_toRightOf="@+id/textView2"
        android:background="@drawable/yes"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/editclock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cancel"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="14dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/darkmagenta" />

    <EditText
        android:id="@+id/mEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toRightOf="@+id/btn_back"
        android:ems="10"
        android:inputType="number"
        android:text="100"
        android:textColor="@color/ltgray" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toRightOf="@+id/btn_back"
        android:ems="10"
        android:inputType="number"
        android:text="10"
        android:textColor="@color/ltgray" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignTop="@+id/cancel"
        android:layout_toLeftOf="@+id/set"
        android:background="@drawable/return01"
        android:textColor="@color/green" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/set"
        android:layout_below="@+id/timePicker1"
        android:layout_marginRight="22dp"
        android:layout_marginTop="74dp"
        android:text="@string/sec"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/darkmagenta" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mEdit"
        android:layout_toRightOf="@+id/editText1"
        android:text="次"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/darkmagenta" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/editclock"
        android:layout_toLeftOf="@+id/btn_back"
        android:background="@drawable/no"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText1"
        android:layout_alignBottom="@+id/editText1"
        android:layout_toRightOf="@+id/editclock"
        android:text="猜拳須贏次數"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/darkmagenta" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/editclock"
        android:text="重覆響起間隔"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/darkmagenta" />

</RelativeLayout>